<% end %>
              <li><%= link_to "O nas", about_path %></li>

			</ul>
		</div>
	</nav><!-- end of top nav -->
	
</div><!-- #wrapper -->
	<section id="main"><!-- #main content area -->
			<section id="content"><!-- #content -->
			<section id="ocena"><!-- #content -->
