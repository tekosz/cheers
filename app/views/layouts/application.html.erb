  	<% end %>

  </div>

	</header><!-- end of header -->
<div id="wrapper"><!-- #wrapper -->

	<nav><!-- top nav -->
		<div class="menu">
			<ul>
	<li><%= link_to 'Start', root_path %>
	<li><%= link_to 'SkÅ‚adniki', ingredients_path %>
	<li><%= link_to 'Drinki', coctails_path %>
