  <%= stylesheet_link_tag('styles', :media => :screen) %>
  <%= stylesheet_link_tag('style_wydruk', :media => :print) %>
</head>
<body>
	<header><!-- header -->
<div id="takeatour">
		<h1><a href="#">Cheers!</a></h1>
